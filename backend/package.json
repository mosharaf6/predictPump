{
  "name": "prediction-pump-backend",
  "version": "1.0.0",
  "description": "Backend services for PredictionPump",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "db:test": "ts-node src/scripts/db-cli.ts test-connection",
    "db:migrate": "ts-node src/scripts/db-cli.ts migrate",
    "db:status": "ts-node src/scripts/db-cli.ts migration-status",
    "db:validate": "ts-node src/scripts/db-cli.ts validate-schema",
    "db:health": "ts-node src/scripts/db-cli.ts health-check",
    "db:rollback": "ts-node src/scripts/db-cli.ts rollback",
    "db:reset": "ts-node src/scripts/db-cli.ts reset --confirm",
    "blockchain:status": "ts-node src/scripts/blockchain-cli.ts status",
    "blockchain:listen": "ts-node src/scripts/blockchain-cli.ts listen",
    "blockchain:catchup": "ts-node src/scripts/blockchain-cli.ts catchup",
    "blockchain:events": "ts-node src/scripts/blockchain-cli.ts events",
    "blockchain:cleanup": "ts-node src/scripts/blockchain-cli.ts cleanup",
    "blockchain:reset": "ts-node src/scripts/blockchain-cli.ts reset --confirm"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "knex": "^3.0.1",
    "redis": "^4.6.10",
    "ws": "^8.14.2",
    "@solana/web3.js": "^1.87.6",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@types/commander": "^2.12.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1"
  }
}