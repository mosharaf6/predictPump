# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Database
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/predictionpump

# Redis
REDIS_URL=redis://redis:6379

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta

# SSL/TLS
ACME_EMAIL=admin@predictionpump.com

# Monitoring
GRAFANA_PASSWORD=your_grafana_password_here

# Alerts (optional)
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Application
BUILD_ID=production-v1.0.0
NODE_ENV=production

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ANALYTICS_ID=your-analytics-id

# CDN and Assets
CDN_URL=https://cdn.predictionpump.com
ASSETS_URL=https://assets.predictionpump.com